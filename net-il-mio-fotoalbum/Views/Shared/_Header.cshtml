

<header>

<nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">My Photo Album</a>
    <button class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto gap-2">

            @if(User.IsInRole("ADMIN") || User.IsInRole("USER"))
            {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false">
                    Actions
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="@Url.Action("Index","Picture")">See all pictures</a>
                    <div class="dropdown-divider"></div>
                            @if (User.IsInRole("ADMIN"))
                            {
                    <a class="dropdown-item" href="@Url.Action("Create","Picture")">Add a picture</a>
                                
                    <div class="dropdown-divider"></div>
                            }

                    <a class="dropdown-item" href="@Url.Action("Index","Category")">See all categories</a>
                    <div class="dropdown-divider"></div>
                    @if (User.IsInRole("ADMIN"))
                    {                           
                    <a class="dropdown-item" href="@Url.Action("Create","Category")">Add a category</a>
                    <div class="dropdown-divider"></div>
                     }
                </div>                    
            </li>
                }
                
            @*Authentication*@
            <li>
                <partial name="_LoginPartial" />
            </li>
        </ul>
        @if (User.IsInRole("ADMIN"))
        {
            <div class="ms-auto">
                <strong>ADMIN</strong>
            </div>
        }
        @if (User.IsInRole("USER"))
        {
            <div class="ms-auto">
                <strong>USER</strong>
            </div>
        }
           
    </div>
</nav>
</header>
